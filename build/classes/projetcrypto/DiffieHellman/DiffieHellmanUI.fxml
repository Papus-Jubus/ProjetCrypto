<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="415.0" prefWidth="400.0" stylesheets="@diffiehellmanui.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="projetcrypto.DiffieHellman.DiffieHellmanUIController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>
    <spacing>15</spacing>

    <Label style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #333;" text="Partage de Clé Diffie-Hellman" />

    <HBox spacing="10">
        <Label style="-fx-text-fill: #333;" text="Nombre de Participants:" />
        <ComboBox fx:id="participantsComboBox" onAction="#updateParticipantOptions" promptText="Choisissez" />
    </HBox>

    <HBox spacing="10">
        <Label style="-fx-text-fill: #333;" text="Algorithme:" />
        <ComboBox fx:id="algorithmComboBox" promptText="Choisissez l'algorithme" />
    </HBox>

    <HBox fx:id="keyButtonsBox" spacing="10">
        <Button fx:id="generateAliceButton" onAction="#generateAliceKeys" prefHeight="42.0" prefWidth="98.0" text=" Clé Alice">
         <font>
            <Font name="Berlin Sans FB" size="4.0" />
         </font></Button>
        <Button fx:id="generateBobButton" onAction="#generateBobKeys" text=" Clé Bob" />
        <Button fx:id="generateCharlieButton" onAction="#generateCharlieKeys" text=" Clé Charlie" />
    </HBox>

    <Label fx:id="keyGenerationMessage" style="-fx-text-fill: #333;" text="" />

    <HBox spacing="10">
        <Button fx:id="generateSharedKeyButton" onAction="#generateSharedKey" text="Générer Clé Secrète" />
        <Button fx:id="compareKeysButton" onAction="#compareKeys" text="Comparer Clés" />
      <VBox.margin>
         <Insets top="-30.0" />
      </VBox.margin>
    </HBox>

    <Label style="-fx-text-fill: #333;" text="Clé Secrète Générée:" />
    <TextField fx:id="sharedKeyTextField" editable="false">
      <VBox.margin>
         <Insets top="-15.0" />
      </VBox.margin></TextField>

    <Label style="-fx-text-fill: #333;" text="Message:" />
    <TextField fx:id="messageTextField" editable="false">
      <VBox.margin>
         <Insets top="-15.0" />
      </VBox.margin></TextField>
</VBox>
